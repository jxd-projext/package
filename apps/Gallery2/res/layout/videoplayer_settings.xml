<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout android:id="@+id/step_option_item" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="10dip" android:paddingBottom="10dip">
		<TextView android:id="@+id/step" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" />
		<TextView android:id="@+id/step_desc" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" />
		<ImageView android:src="@android:drawable/divider_horizontal_dark"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:scaleType="fitXY" />
	</LinearLayout>
</LinearLayout>
